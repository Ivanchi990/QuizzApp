<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textoPreguntaId"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/textoPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="75px"
        app:layout_constraintStart_toEndOf="@+id/textoPreguntaId"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Â¿Buenas nalgas?"/>

    <TextView
        android:id="@+id/textoRespuesta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        app:layout_constraintStart_toEndOf="@id/textoPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/textoPregunta"
        tools:text="Muy buenas"/>
    <TextView
        android:id="@+id/textoRespuesta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        app:layout_constraintStart_toEndOf="@id/textoPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/textoRespuesta1"
        tools:text="Muy malas"/>
    <TextView
        android:id="@+id/textoRespuesta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        app:layout_constraintStart_toEndOf="@id/textoPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/textoRespuesta2"
        tools:text="Buenas"/>
    <TextView
        android:id="@+id/textoRespuesta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35px"
        app:layout_constraintStart_toEndOf="@id/textoPreguntaId"
        app:layout_constraintTop_toBottomOf="@id/textoRespuesta3"
        tools:text="Megh"/>
</androidx.constraintlayout.widget.ConstraintLayout>